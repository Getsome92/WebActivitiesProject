<% include ../partials/header.ejs %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add new comment to
            <%= activities.name %>
            <h1>
                <div style="width: 30%; margin: 5px auto;">
                    <form action="/activities/<%= activities._id %>/comments" method="POST">
                        <div class="form-group">
                            <input class="form-control" type="text" name="comment[text]" placeholder="Type your comment here">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="comment[author]" placeholder="Author">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                        </div>
                    </form>

                    <a href="/activities">Go Back</a>
                </div>
    </div>
</div>
<% include ../partials/footer.ejs %>
