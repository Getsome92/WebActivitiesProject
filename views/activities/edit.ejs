<% include ../partials/header.ejs %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= activities.name %>!<h1>
                <div style="width: 30%; margin: 5px auto;">
                    <form action="/activities/<%= activities._id %>?_method=PUT" method="POST">
                        <div class="form-group">
                            <input class="form-control" type="text" name="activity[name]" value="<%= activities.name %>">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="activity[image]" value="<%= activities.image %>">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="activity[describtion]" value="<%= activities.describtion %>">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-lg btn-primary btn-block">Update!</button>
                        </div>
                    </form>

                    <a href="/activities">Go Back</a>
                </div>
    </div>
</div>
<% include ../partials/footer.ejs %>
